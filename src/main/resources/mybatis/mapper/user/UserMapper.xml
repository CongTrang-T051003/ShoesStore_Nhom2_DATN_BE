<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fpl.edu.shoeStore.user.mapper.UserMapper">

    <!-- Result Map -->
    <resultMap id="UserResultMap" type="com.fpl.edu.shoeStore.user.entity.User">
        <id property="userId" column="user_id"/>
        <result property="roleId" column="role_id"/>
        <result property="username" column="username"/>
        <result property="passwordHash" column="password_hash"/>
        <result property="fullName" column="full_name"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- Select All -->
    <select id="findAll" resultMap="UserResultMap">
        SELECT user_id,
               role_id,
               username,
               password_hash,
               full_name,
               email,
               phone,
               status,
               created_at,
               updated_at
        FROM sys_user
    </select>

    <!-- Select by ID -->
    <select id="findById" parameterType="int" resultMap="UserResultMap">
        SELECT user_id,
               role_id,
               username,
               password_hash,
               full_name,
               email,
               phone,
               status,
               created_at,
               updated_at
        FROM sys_user
        WHERE user_id = #{id}
    </select>

    <!-- Select by Username -->
    <select id="findByUsername" parameterType="string" resultMap="UserResultMap">
        SELECT user_id,
               role_id,
               username,
               password_hash,
               full_name,
               email,
               phone,
               status,
               created_at,
               updated_at
        FROM sys_user
        WHERE username = #{username}
    </select>

    <!-- Select by Phone -->
    <select id="findByPhone" parameterType="string" resultMap="UserResultMap">
        SELECT user_id,
               role_id,
               username,
               password_hash,
               full_name,
               email,
               phone,
               status,
               created_at,
               updated_at
        FROM sys_user
        WHERE phone = #{phone}
    </select>

    <!-- Insert -->
    <insert id="insert" parameterType="com.fpl.edu.shoeStore.user.entity.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO sys_user (role_id, username, password_hash, full_name, email, phone, status, created_at)
        VALUES (#{roleId}, #{username}, #{passwordHash}, #{fullName}, #{email}, #{phone}, #{status}, NOW())
    </insert>

    <!-- Update -->
    <update id="update" parameterType="com.fpl.edu.shoeStore.user.entity.User">
        UPDATE sys_user
        SET role_id       = #{roleId},
            username      = #{username},
            password_hash = #{passwordHash},
            full_name     = #{fullName},
            email         = #{email},
            phone         = #{phone},
            status        = #{status},
            updated_at    = NOW()
        WHERE user_id = #{userId}
    </update>

    <!-- Delete -->
    <delete id="deleteById" parameterType="int">
        DELETE FROM sys_user
        WHERE user_id = #{id}
    </delete>

    <!-- Paged select with filters -->
    <select id="findAllPaged" parameterType="map" resultMap="UserResultMap">
        SELECT user_id,
               role_id,
               username,
               password_hash,
               full_name,
               email,
               phone,
               status,
               created_at,
               updated_at
        FROM sys_user
        <where>
            <!-- Search by userId -->
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <!-- Search by username -->
            <if test="username != null and username != ''">
                AND LOWER(username) LIKE CONCAT('%', LOWER(#{username}), '%')
            </if>
            <!-- Search by fullName -->
            <if test="fullName != null and fullName != ''">
                AND LOWER(full_name) LIKE CONCAT('%', LOWER(#{fullName}), '%')
            </if>
            <!-- Search by email -->
            <if test="email != null and email != ''">
                AND LOWER(email) LIKE CONCAT('%', LOWER(#{email}), '%')
            </if>
            <!-- Search by phone -->
            <if test="phone != null and phone != ''">
                AND phone LIKE CONCAT('%', #{phone}, '%')
            </if>
            <!-- Filter by roleId -->
            <if test="roleId != null">
                AND role_id = #{roleId}
            </if>
            <!-- Filter by status -->
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
        ORDER BY user_id DESC
        LIMIT #{size} OFFSET #{offset}
    </select>

    <!-- Count with filters -->
    <select id="countAll" parameterType="map" resultType="long">
        SELECT COUNT(user_id)
        FROM sys_user
        <where>
            <!-- Search by userId -->
            <if test="userId != null">
                AND user_id = #{userId}
            </if>
            <!-- Search by username -->
            <if test="username != null and username != ''">
                AND LOWER(username) LIKE CONCAT('%', LOWER(#{username}), '%')
            </if>
            <!-- Search by fullName -->
            <if test="fullName != null and fullName != ''">
                AND LOWER(full_name) LIKE CONCAT('%', LOWER(#{fullName}), '%')
            </if>
            <!-- Search by email -->
            <if test="email != null and email != ''">
                AND LOWER(email) LIKE CONCAT('%', LOWER(#{email}), '%')
            </if>
            <!-- Search by phone -->
            <if test="phone != null and phone != ''">
                AND phone LIKE CONCAT('%', #{phone}, '%')
            </if>
            <!-- Filter by roleId -->
            <if test="roleId != null">
                AND role_id = #{roleId}
            </if>
            <!-- Filter by status -->
            <if test="status != null and status != ''">
                AND status = #{status}
            </if>
        </where>
    </select>

</mapper>
